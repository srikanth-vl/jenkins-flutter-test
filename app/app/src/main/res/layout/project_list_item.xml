<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_list_item_height"
    android:background="@drawable/shape_rectangular_color_primary_transparent_edges"
    android:layout_marginBottom="@dimen/margin"
    android:elevation="@dimen/elevation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_list_item_height"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true">
        <RelativeLayout
            android:id="@+id/project_image_layout"
            android:layout_width="@dimen/app_list_item_height"
            android:layout_height="@dimen/app_list_item_height"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/project_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/project_image_layout"
            android:layout_marginLeft="@dimen/double_margin"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/project_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/project_list_item_name"
                android:layout_marginTop="@dimen/double_margin"
                android:background="@android:color/transparent">

                <!--<TextView-->
                    <!--android:id="@+id/project_list_subtext"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="15sp"-->
                    <!--android:textColor="@android:color/white"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:layout_weight="1"/>-->

                <TextView
                    android:id="@+id/project_list_item_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:layout_weight="1" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
