<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_overlay_root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_color_primary_darker_white_edges">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/project_name"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/white"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/edit_form"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/list_action_bar_icon"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/get_directions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/location"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <!--<ImageButton-->
                <!--android:id="@+id/cancel"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:src="@drawable/delete"-->
                <!--android:scaleType="fitXY"/>-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>