<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_list_item_height"
    android:background="@drawable/shape_rectangular_color_primary_transparent_edges"
    android:layout_marginBottom="@dimen/margin"
    android:elevation="@dimen/elevation">

    <RelativeLayout
        android:id="@+id/grid_image_layout"
        android:layout_width="@dimen/app_list_item_height"
        android:layout_height="@dimen/app_list_item_height"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/grid_image"
            android:layout_width="@dimen/app_list_icon_dimension"
            android:layout_height="@dimen/app_list_icon_dimension"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_list_item_height"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@id/grid_image_layout"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/double_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/grid_project_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>