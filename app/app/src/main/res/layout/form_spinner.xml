<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_spinner_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="@dimen/double_margin"
        android:layout_marginRight="@dimen/double_margin">

        <RelativeLayout
            android:id="@+id/form_spinner_static_icon_layout"
            android:layout_width="@dimen/icon_layout_dimension"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/double_margin"
            android:visibility="gone">

            <ImageView
                android:id="@+id/form_spinner_static_icon"
                android:layout_width="@dimen/icon_dimension"
                android:layout_height="@dimen/icon_dimension"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/form_spinner_static_icon_layout">

            <TextView
                android:id="@+id/form_spinner_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/form_field_label_textsize"
                android:background="@android:color/transparent"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/form_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_dimension"
                android:textColor="@color/white"
                android:textSize="@dimen/form_field_textsize"
                android:background="@drawable/spinner_backgrnd_dropdown"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:paddingLeft="@dimen/margin"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/double_margin"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/half_margin"/>

</LinearLayout>