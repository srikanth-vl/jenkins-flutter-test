<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid android:color="@android:color/white" />

                    <stroke
                        android:width="1.50dp"
                        android:color="@color/form_view_border_color" />

                    <corners android:radius="4dp" />

                </shape>

            </item>


            <item android:right="8dp"
                android:bottom="@dimen/dimen_10dp"
                android:top="@dimen/dimen_10dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/spinner_dropdown_image"/>

            </item>


        </layer-list>

    </item>

</selector>